<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <SwitchPreference
            android:defaultValue="true"
            android:key="flash"
            android:summary=""
            android:title="Мигать фонариком" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="screen"
            android:summary=""
            android:title="Мигать экраном" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="sound"
            android:summary=""
            android:title="Издавать звук" />
        <org.anasthase.androidseekbarpreference.SeekBarPreference
            android:defaultValue="100"
            android:key="seekBar"
            android:summary="Длина точки. Длина тире = дл. точки * 3"
            android:title="Длительность"
            app:format="%d ms"
            app:maxValue="1000"
            app:minValue="100"
            app:stepValue="50" />

    <Preference
        android:key="screen"
        android:summary="Оцените приложение"
        android:title="Оценить" />
    <Preference
        android:key="screen"
        android:summary="Игры и прложения от creese"
        android:title="Еще приложения" />

</PreferenceScreen>